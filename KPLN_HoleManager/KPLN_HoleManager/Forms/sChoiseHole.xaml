<Window x:Class="KPLN_HoleManager.Forms.sChoiseHole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:KPLN_HoleManager.Forms"
        mc:Ignorable="d" 
        Height="160" Width="250"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Background="#FF616163">
    <!-- Фон окна синий -->

    <Grid Margin="10,5,5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Заголовок -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Верхняя панель с кнопкой закрытия -->
        <DockPanel Grid.Row="0">
            <TextBlock Text="Выберите тип отверстия" FontSize="14" Foreground="White" 
                       VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button Content="❌" Width="20" Height="20" Background="#FFA90202"
                    Foreground="White" FontSize="10" FontWeight="Bold"
                    HorizontalAlignment="Right" Margin="0,2,5,0" Click="CloseWindow"/>
        </DockPanel>

        <!-- Раскрывающийся список -->
        <ComboBox Grid.Row="1" Margin="0,15,0,15" VerticalAlignment="Center" 
                  HorizontalAlignment="Left" Width="230" FontSize="13">
            <ComboBoxItem Content="АР" />
            <ComboBoxItem Content="КР" />
            <ComboBoxItem Content="ИОС" />
            <ComboBoxItem Content="BIM" />
        </ComboBox>

        <!-- Первая кнопка -->
        <Button Grid.Row="2" Content="🔲  Прямоугольное отверстие" FontSize="12" 
                VerticalAlignment="Center" HorizontalAlignment="Left" 
                HorizontalContentAlignment="Left" Padding="10,0" 
                Width="230" Height="30" Margin="0,0,0,5"/>

        <!-- Вторая кнопка -->
        <Button Grid.Row="3" Content="🔴  Круглое отверстие" FontSize="12" 
                VerticalAlignment="Center" HorizontalAlignment="Left" 
                HorizontalContentAlignment="Left" Padding="10,0"
                Width="230" Height="30" />
    </Grid>
</Window>