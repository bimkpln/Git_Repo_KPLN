<Window x:Class="KPLN_ViewsAndLists_Ribbon.Forms.CopyViewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:KPLN_ViewsAndLists_Ribbon.Forms"
        mc:Ignorable="d" 
        Height="615" Width="730"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="KPLN. Копирование шаблонов вида">
    
    <Grid Margin="15">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock Text="Имя активного документа"  Height="15" FontSize="11"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TB_ActivDocumentName" Height="25" Width="410" Margin="0 0 15 0" Padding="3" Cursor="Arrow" IsReadOnly="True"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Height="410" Margin="0 10 0 3" Background="#FFF1F1F1">
            <Border Padding="5" Background="#FFF1F1F1">
                <StackPanel x:Name="SP_OtherFileSetings" Background="#FFF1F1F1"/>
            </Border>
        </ScrollViewer>

        <Grid Grid.Row="2">
            <GroupBox Header="Дополнительные настройки" Margin="5,7,0,0" FontSize="12" Width="370" HorizontalAlignment="Left">
                <StackPanel Margin="5 5 5 3" VerticalAlignment="Bottom">
                    <CheckBox x:Name="CHK_OpenDocument" Content=" Открыть документы после обработки" FontSize="12" Margin="0,0,0,4"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Документы для обработки" Margin="5 7 0 0" FontSize="12" Width="296px" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Button x:Name="BTN_RunManyFile" HorizontalAlignment="Right" IsEnabled="False" Content="Локальный диск"
                    Width="130" Height="24" FontSize="12" Margin="0 0 10 0" Click="BTN_RunManyFile_Click"/>
                    <Button x:Name="BTN_RunManyFileRS" HorizontalAlignment="Right" IsEnabled="False" Content="Revit-сервер"
                    Width="130" Height="24" FontSize="12" Click="BTN_RunManyFileRS_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>

    </Grid>
    
</Window>