<Window x:Class="KPLN_ViewsAndLists_Ribbon.Forms.CopyViewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:KPLN_ViewsAndLists_Ribbon.Forms"
        mc:Ignorable="d" 
        Height="665" Width="730"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="KPLN. Копирование шаблонов вида">
    
    <Grid Margin="15">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock Text="Имя активного документа"  Height="15" FontSize="11"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TB_ActivDocumentName" Height="25" Width="450" Margin="0 0 15 0" Padding="3" Cursor="Arrow" IsReadOnly="True"/>
                <Button x:Name="BTN_LoadLinkedDoc" Content="Открытый документ" Width="105px" Margin="0 0 5 0" FontSize="10" Click="BTN_LoadLinkedDoc_Click"/>
                <Button x:Name="BTN_LoadCustomDoc" Content="Внешний документ" Width="105px" FontSize="10" Click="BTN_LoadCustomDoc_Click"/>
            </StackPanel>
        </StackPanel>



        <StackPanel x:Name="SP_OtherFile" Grid.Row="1" Height="50" Margin="0 10 0 0" Background="#FFF1F1F1">
        </StackPanel>

        <StackPanel x:Name="SP_BtnViewPanel" Grid.Row="2" Height="25" Margin="0 10 0 0" Orientation="Horizontal">
            <Button x:Name="BTN_OpenTempalte" IsEnabled="False" Content="Шаблоны" Width="100" Margin="5 0" FontSize="10" Click="BTN_OpenTempalte_Click"/>
            <Button x:Name="BTN_OpenTemplateAndView" IsEnabled="False" Content="Виды и шаблоны" Width="120" Margin="5 0" FontSize="10" Click="BTN_OpenTemplateAndView_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="3" Height="410" Margin="0 10 0 10" Background="#FFF1F1F1">
            <Border Padding="5" Background="#FFF1F1F1">
                <StackPanel x:Name="SP_OtherFileSetings" Background="#FFF1F1F1"/>
            </Border>
        </ScrollViewer>

        <StackPanel Grid.Row="4" HorizontalAlignment="Right">
            <Button x:Name="BTN_Run" IsEnabled="False" Content="Копировать шаблоны" Width="130px" Height="23" FontSize="11" Click="BTN_Run_Click"/>
        </StackPanel>

    </Grid>
    
</Window>