<Window x:Class="KPLN_ViewsAndLists_Ribbon.Forms.ManyDocumentsSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KPLN. Загрузка и обработка нескольких документов" 
        Height="400" Width="700"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">
    <DockPanel Margin="10">

        <!-- Нижняя панель с двумя кнопками -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="AddButton" Content="Добавить файл" Width="120" Height="23px" Margin="5" Click="AddButton_Click"/>
            <Button Name="ProcessButton" Content="Обработать файлы" Width="130" Height="23px" Margin="5" Click="ProcessButton_Click"/>
        </StackPanel>

        <!-- Область со скроллом для строк -->
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="5,5,5,0" Background="#FFF7F7F7">
            <ItemsControl Name="ItemsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="2,3">
                            <Button Content="X"
                                    Background="DarkRed" Foreground="White"
                                    Width="20"
                                    FontWeight="Bold"
                                    DockPanel.Dock="Left"
                                    Margin="6,0,0,0"
                                    Click="DeleteButton_Click"/>
                            <Border Background="#DFFFE0" BorderBrush="Black" Padding="5" Margin="0,0,5,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding FullPath}" VerticalAlignment="Center" ToolTip="{Binding FullPath}"/>
                            </Border>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </DockPanel>
</Window>
