<Window x:Class="KPLN_ViewsAndLists_Ribbon.Forms.ListRenumberForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:KPLN_ViewsAndLists_Ribbon.Forms"
        mc:Ignorable="d" 
        FontFamily="Monaco, Consolas, 'Andale Mono', 'DejaVu Sans Mono', monospace"
        Title="KPLN: Нумерация листов" 
        MaxWidth="600" 
        SizeToContent="WidthAndHeight" 
        Background="#FF292D36"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize" 
        WindowStyle="ToolWindow" 
        Topmost="False">
    <Window.Resources>
        <Style TargetType="Button" x:Key="BTN">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Padding" Value="5,0,5,0"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TXT">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>
        <Style TargetType="CheckBox" x:Key="CHB">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="RadioButton" x:Key="MainRB">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Expander" x:Key="EXP">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="5">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- 0. Юникоды -->
    <StackPanel Grid.Row="0">
        <RadioButton 
            GroupName="RenameType" 
            Style="{StaticResource MainRB}" 
            IsChecked="{Binding IsUnicode}" 
            Content="Использовать Юникоды?"/>
        <Expander 
            Style="{StaticResource EXP}" 
            Header="Используем Юникоды!" 
            IsEnabled="{Binding IsUnicode}"
            IsExpanded="{Binding IsUnicode}">
            <StackPanel>
                <TextBlock 
                    Style="{StaticResource TXT}" 
                    Text="Выбери символ Юникода:"/>
                <ComboBox 
                    ItemsSource="{Binding Unicode_UnicodeList}" 
                    SelectedItem="{Binding Unicode_SelectedUnicode}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <CheckBox 
                    Style="{StaticResource CHB}" 
                    IsChecked="{Binding Unicode_IsChangePrefixToUnicode}" 
                    Margin="5" 
                    Content="Перевести нумерацию на Юникоды?">
                        <CheckBox.ToolTip>
                            <TextBlock 
                                Text="Включи для замены префиксной нумерации на использование Юникодов"/>
                        </CheckBox.ToolTip>
                </CheckBox>
                <CheckBox 
                    x:Name="UnicodeCount"
                    Style="{StaticResource CHB}" 
                    IsChecked="{Binding Unicode_IsSetNumberOfUnicodes}" 
                    Margin="5" 
                    Content="Задать количество символов Юникода вручную?">
                    <CheckBox.ToolTip>
                        <TextBlock 
                            Text="Включи для введения коэффициента Юникода вручную (количество добавлений одного и того же кода)"/>
                    </CheckBox.ToolTip>
                </CheckBox>
                <TextBlock 
                    Style="{StaticResource TXT}" 
                    Text="Укажи количество Юникодов:" 
                    Opacity="0.5"/>
                <TextBox 
                    Text="{Binding Unicdoe_CountOfUnicodes}" 
                    IsEnabled="{Binding UseStrongUnicodeCounter, Mode=TwoWay}"/>
            </StackPanel>
        </Expander>
    </StackPanel>

    <!-- 1. Префиксы -->
    <StackPanel Grid.Row="1">
        <RadioButton 
            GroupName="RenameType" 
            Style="{StaticResource MainRB}" 
            IsChecked="{Binding IsPrefix}" 
            Content="Использовать приставки?"/>
        <Expander 
            Style="{StaticResource EXP}" 
            Header="Используем префиксы!" 
            IsEnabled="{Binding IsPrefix}"
            IsExpanded="{Binding IsPrefix}">
            <StackPanel>
                <TextBlock 
                    Style="{StaticResource TXT}" 
                    IsHyphenationEnabled="True" 
                    Text="Позволяет задать номер листа в формате: [Том]/[Номер]. Номер в формате 001, ... 010, ... 100 (для корректного группирования в диспетчере проекта)" />
                <TextBlock 
                    Style="{StaticResource TXT}" 
                    Text="[Том]: Укажи префикс"/>
                <TextBox 
                    Text="{Binding Prefix_Text}"/>
                <Expander Style="{StaticResource EXP}" Header="Подсказка">
                    <StackPanel>
                        <TextBlock 
                            Style="{StaticResource TXT}" 
                            Text="1. Рразделитель между [Том] и [Номер] - символ '/' подставляется автоматически" 
                            Opacity="0.5"/>
                    </StackPanel>
                </Expander>
                <CheckBox 
                    Style="{StaticResource CHB}" 
                    IsChecked="{Binding Prefix_IsParamUpdate}" 
                    Margin="5" 
                    Content="Обновить нумерацию в параметре штампа?"/>
                <StackPanel>
                    <TextBlock Style="{StaticResource TXT}" Text="Параметр штампа (основной надписи):"/>
                    <ComboBox 
                        ItemsSource="{Binding TitleBlockParameters}" 
                        SelectedItem="{Binding Prefix_SelectedTitleBlockParameter}" 
                        IsEnabled="{Binding Prefix_IsParamUpdate}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Definition.Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Expander>
    </StackPanel>

    <!-- 2. Только перенумерация -->
    <StackPanel Grid.Row="2">
        <RadioButton 
            GroupName="RenameType" 
            Style="{StaticResource MainRB}" 
            IsChecked="{Binding IsOnlyRenumber}" 
            Content="Пренеумеровать?"/>
        <Expander 
            Style="{StaticResource EXP}" 
            Header="Только обновляем нумерацию (приставки сохранятся)!" 
            IsEnabled="{Binding IsOnlyRenumber}"
            IsExpanded="{Binding IsOnlyRenumber}">
            <StackPanel>
                <TextBlock 
                    Style="{StaticResource TXT}" 
                    Text="Укажи стартовое значение номера листа у выбранных листов:" 
                    Opacity="0.5"/>
                <TextBox 
                    Text="{Binding OnlyRenumber_StartNumber}"/>
                <CheckBox 
                    Style="{StaticResource CHB}" 
                    IsChecked="{Binding OnlyRenumber_IsParamUpdate}" 
                    Margin="5" 
                    Content="Обновить нумерацию в параметре штампа?"/>
                <StackPanel>
                    <TextBlock 
                        Style="{StaticResource TXT}" 
                        Text="Параметр штампа (основной надписи):"/>
                    <ComboBox 
                        ItemsSource="{Binding TitleBlockParameters}" 
                        SelectedItem="{Binding OnlyRenumber_SelectedTitleBlockParameter}" 
                        IsEnabled="{Binding OnlyRenumber_IsParamUpdate}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Definition.Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Expander>
    </StackPanel>

    <!-- 3. Обновление параметра -->
    <StackPanel Grid.Row="3">
        <RadioButton 
            GroupName="RenameType" 
            Style="{StaticResource MainRB}" 
            IsChecked="{Binding IsRefreshParam}" 
            Content="Обновить номер листа в параметре штампа?"/>
        <Expander 
            Style="{StaticResource EXP}" 
            Header="Обновляем параметр!" 
            IsEnabled="{Binding IsRefreshParam}"
            IsExpanded="{Binding IsRefreshParam}">
            <StackPanel>
                <TextBlock 
                    Style="{StaticResource TXT}" 
                    Text="Параметр штампа (основной надписи):"/>
                <ComboBox 
                    ItemsSource="{Binding TitleBlockParameters}" 
                    SelectedItem="{Binding RefreshParam_SelectedTitleBlockParameter}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Definition.Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Expander>
    </StackPanel>

    <!-- 4. Очистка нумерации -->
    <StackPanel Grid.Row="4">
        <RadioButton 
            GroupName="RenameType" 
            Style="{StaticResource MainRB}" 
            IsChecked="{Binding IsClearedNumber}" 
            Content="Очистить от приставок и Юникодов?"/>
    </StackPanel>

    <!-- 5. Управление -->
    <StackPanel 
        Grid.Row="5" 
        Margin="0,10,0,5"
        Orientation="Horizontal">
        <Button 
            Style="{StaticResource BTN}" 
            Content="Запуск" 
            Command="{Binding OkCommand}" 
            IsDefault="True"/>
    </StackPanel>
</Grid>
    
</Window>