<Window x:Class="KPLN_Library_Forms.UI.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:KPLN_Library_Forms.UI"
        mc:Ignorable="d" 
        FontFamily="Monaco, Consolas, 'Andale Mono', 'DejaVu Sans Mono', monospace"
        Title="KPLN" 
        Width="400" 
        Height="200"  
        Background="#FF292D36" 
        ResizeMode="NoResize" 
        WindowStyle="ToolWindow" 
        Topmost="True">
    <Window.Resources>
        <Style TargetType="Button" x:Key="BTN">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Padding" Value="5,0,5,0"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <local:IntToBoolConverter x:Key="IntToBoolConverter"/>
        </Grid.Resources>
        
        <Label 
            x:Name="LabelHeader" 
            Grid.Row="0" 
            Content="Задаётся через конструктор!" 
            Foreground="White"
            FontSize="14"
            FontWeight="Bold"/>

        <TextBox 
            x:Name="TblMainContent" 
            Grid.Row="1" 
            Text="Задается через конструктор!"
            IsReadOnly="True"
            Margin="5"
            TextWrapping="Wrap"
            Background="Transparent"
            BorderBrush="Transparent"
            Foreground="White"/>

        <Button x:Name="BtnOk" 
            Grid.Row="2" 
            Style="{StaticResource BTN}" 
            HorizontalAlignment="Left"
            Content="Ok"
            Click="BtnOk_Click"/>
    </Grid>
</Window>
