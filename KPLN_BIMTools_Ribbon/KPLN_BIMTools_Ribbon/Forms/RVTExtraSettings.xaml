<UserControl x:Class="KPLN_BIMTools_Ribbon.Forms.RVTExtraSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KPLN_BIMTools_Ribbon.Forms"
             mc:Ignorable="d" 
             Background="#FF292D36">
    <UserControl.Resources>

        <local:DoubleValidationRule x:Key="IntValidationRule"/>
        
        <Style 
            x:Key="TBlock"
            TargetType="TextBlock">
            <Setter Property="Padding" Value="7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style 
            x:Key="TBox"
            TargetType="TextBox">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style 
            x:Key="CBox"
            TargetType="CheckBox">
            <Setter Property="Padding" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style 
            x:Key="CombBox"
            TargetType="ComboBox">
            <Setter Property="Width" Value="80"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource TBlock}"
            Text="Количество резервных копий"/>
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Style="{StaticResource TBox}"
            TextChanged="MaxBackupTBox_TextChanged">
            <TextBox.Text>
                <Binding 
                    Path="MaxBackup" 
                    UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <StaticResource ResourceKey="IntValidationRule"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <TextBox.ToolTip>
                <TextBlock>
                    <Run 
                        Text="Количество резервных копий (по умолчанию 10 шт.)."
                        Foreground="Black" />
                    <Run 
                        Text="ВАЖНО: Если значение -1, то резервные копии не применимы для этого конфига" 
                        Foreground="Red" 
                        FontWeight="Bold"/>
                </TextBlock>
            </TextBox.ToolTip>
        </TextBox>
    </Grid>
</UserControl>
