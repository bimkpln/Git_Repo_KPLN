<!-- SettingsWindowNodeManagerCategory.xaml -->
<Window x:Class="KPLN_Tools.Forms.SettingsWindowNodeManagerCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KPLN_Tools.Forms"
        Title="KPLN. Менеджер узлов. Категории"
        Height="560" Width="820"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="#FFFFFF">

    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <HierarchicalDataTemplate DataType="{x:Type local:CategoryNode}" ItemsSource="{Binding Children}">
            <DockPanel ToolTip="{Binding Id}">
                <TextBlock Text="{Binding Title}"/>
                <TextBlock Text="  🔒 защищено"
                           Foreground="#888"
                           Margin="6,0,0,0"
                           Visibility="{Binding IsNonCatRoot, Converter={StaticResource BoolToVis}}"/>
            </DockPanel>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Background="#FAFAFA">
            <DockPanel LastChildFill="True">
                <TextBlock Text="Глобальная категория:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbNames" Width="250" SelectionChanged="CbNames_SelectionChanged"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnExpand" Content="Развернуть все подкатегории  ▼" Margin="8,0,0,0" Padding="4" Click="BtnExpand_Click" FontSize="10"/>
                    <Button x:Name="BtnCollapse" Content="Свернуть все подкатегории  ▲" Margin="8,0,0,0" Padding="4" Click="BtnCollapse_Click" FontSize="10"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Margin="0,10,0,10" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Background="#FFFFFF">
            <TreeView x:Name="Tree"/>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="BtnRename" Content="Переименовать  ✏️" Margin="0,0,8,0" Padding="4" Click="BtnRename_Click"/>
                <Button x:Name="BtnAddSibling" Content="Добавить категорию  📁" Margin="0,0,8,0" Padding="4" Background="#FF96F5A0" Click="BtnAddSibling_Click"/>
                <Button x:Name="BtnAddChild" Content="Добавить подкатегорию  📁" Margin="0,0,8,0" Padding="4" Background="#FF96F5A0" Click="BtnAddChild_Click"/>
                <Button x:Name="BtnDelete" Content="Удалить категорию 🗑️" Margin="0,0,8,0" Padding="4" Click="BtnDelete_Click" Background="#FFFFB9B9"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                <Button x:Name="BtnSave" Content="Сохранить в БД  💾" Margin="0,0,8,0" Padding="4" Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
