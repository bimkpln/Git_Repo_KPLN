<Window x:Class="KPLN_Tools.Forms.FamilyManagerEditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="620" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        FontFamily="Century Gothic">

    <Window.Resources>
        <Style x:Key="DeptCheckStyle" TargetType="CheckBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="Box"
                                    Width="16" Height="16"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    Background="Transparent"
                                    VerticalAlignment="Center"
                                    Margin="0,0,4,0"/>
                            <ContentPresenter VerticalAlignment="Center" Margin="0,0.7,0,0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Box" Property="Background" Value="LightGreen"/>
                                <Setter TargetName="Box" Property="BorderBrush" Value="Green"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="Green"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FlatRichTextBox" TargetType="{x:Type RichTextBox}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RichTextBox}">
                        <Border Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}"
                                          HorizontalScrollBarVisibility="{TemplateBinding HorizontalScrollBarVisibility}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StarToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#5F5F5F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Content" Value="★"/>
                                <Setter Property="Foreground" Value="#C29B00"/>
                                <Setter Property="ToolTip" Value="Убрать из избранного"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Content" Value="☆"/>
                                <Setter Property="Foreground" Value="#5F5F5F"/>
                                <Setter Property="ToolTip" Value="Добавить в избранное"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#8C6F00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ToggleButton x:Name="FavoriteToggle"
                          Grid.ColumnSpan="2"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Margin="0,-26,-3,0"
                          Style="{StaticResource StarToggleStyle}"
                          Click="FavoriteToggle_Click"/>

            <StackPanel Grid.Column="0">
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="8" HorizontalAlignment="Left">
                    <Grid Width="200" Height="200">
                        <Image x:Name="PreviewImage" Stretch="Uniform"/>
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="16,0,0,20" VerticalAlignment="Top">

                <TextBlock x:Name="FamilyName"
                           TextTrimming="CharacterEllipsis"
                           HorizontalAlignment="Left"
                           Margin="0,22,0,4"
                           MaxWidth="800"
                           FontSize="15"
                           FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="📂"
                            Width="24" Height="22"
                            Margin="0,0,6,0"
                            Padding="0.3,0,0,0.8"
                            ToolTip="Открыть папку"
                            Click="BtnOpenFolder_Click"
                            Background="#FFFFC72C"/>
                    <TextBlock Text="{Binding FULLPATH}"
                               ToolTip="{Binding FULLPATH}"
                               TextTrimming="CharacterEllipsis"
                               HorizontalAlignment="Left"
                               MaxWidth="770"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,8">
                    <TextBlock Text="Отдел:" FontWeight="Bold" Width="90"/>
                    <TextBlock x:Name="DeptValue" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Категория:" FontWeight="Bold" Width="90"/>
                    <TextBlock x:Name="CategoryValue"/>
                    <TextBlock x:Name="CategorySep" Text="  /  " Visibility="Collapsed"/>
                    <TextBlock x:Name="SubCategoryValue" Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Проект:" FontWeight="Bold" Width="90"/>
                    <TextBlock x:Name="ProjectValue"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Стадия:" FontWeight="Bold" Width="90"/>
                    <TextBlock x:Name="StageValue"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5" HorizontalAlignment="Left">
                    <TextBlock Text="Импортируемая из файла информация:"
                               Margin="0 5 0 0"
                               FontWeight="Bold"/>
                </StackPanel>
                <RichTextBox x:Name="ImportInfoBox"
                             Style="{StaticResource FlatRichTextBox}"
                             Height="280"
                             Padding="5"
                             VerticalScrollBarVisibility="Auto"
                             IsReadOnly="True"
                             Background="#FFE8E8E8"
                             FontFamily="Century Gothic"
                             FontSize="13"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="650"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Отмена" Width="120" Height="22" Click="BtnCancel_OnClick"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ButtonOpenFamily" Content="Открыть семейство" Width="140" Height="22" Margin="0,0,8,0" Click="ButtonOpenFamily_Click"/>
                <Button x:Name="ButtonOpenFamilyInProject" Content="Загрузить семейство в проект" Width="210" Height="22" Click="ButtonOpenFamilyInProject_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
