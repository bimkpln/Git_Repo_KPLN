<Window x:Class="KPLN_Tools.Forms.OVVK_SystemManagerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:KPLN_Tools.Forms"
        mc:Ignorable="d" 
        MinWidth="400"
        MinHeight="490"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip"
        Topmost="True"
        Title="KPLN: ОВВК_Менеджер систем"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style x:Key="MainButtons" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>

        <Style x:Key="ItemButtons" TargetType="{x:Type Button}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>

        <Style x:Key="MainTBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="TBox" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="CBox" TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
            Text="Варианты группировки элементов по системам:"
            Style="{StaticResource MainTBlock}"/>

        <TextBlock 
            Grid.Column="1"
            Text="Варианты плагинов:" 
            Style="{StaticResource MainTBlock}"/>

        <Grid
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <GridSplitter
                Height="3" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Stretch"/>

            <ScrollViewer
                Grid.Row="1">
                <ScrollViewer.Resources>
                    <local:JoinStringsConverter x:Key="JoinStringsConverter"/>
                </ScrollViewer.Resources>
                <TextBlock 
                    Text="{Binding Path=SystemSumParameters, Converter={StaticResource JoinStringsConverter}}" 
                    Style="{StaticResource TBlock}">
                </TextBlock>
            </ScrollViewer>

            <GridSplitter
                Grid.Row="1"
                Height="3" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Stretch"/>
        </Grid>

        <Grid
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button
                Name="BtnRefreshSystems"
                IsEnabled="False"
                Style="{StaticResource ItemButtons}">
                <Button.Content>
                    <TextBlock 
                        Text="Обновить имя систем"
                        FontWeight="Bold"
                        Style="{StaticResource TBlock}"/>
                </Button.Content>
            </Button>

            <Button
                Name="BtnSummSystems"
                Grid.Row="1"
                IsEnabled="False"
                Style="{StaticResource ItemButtons}">
                <Button.Content>
                    <TextBlock 
                        Text="Объединить системы"
                        FontWeight="Bold"
                        Style="{StaticResource TBlock}"/>
                </Button.Content>
            </Button>
            <Button
                Name="BtnCreateViews"
                Grid.Row="2"
                Click="BtnCreateViews_Click"
                Style="{StaticResource ItemButtons}">
                <Button.Content>
                    <TextBlock 
                        Text="Создать аксономе-трические виды"
                        FontWeight="Bold"
                        Style="{StaticResource TBlock}"/>
                </Button.Content>
                <Button.ToolTip>
                    <StackPanel
                        MaxWidth="300">
                        <TextBlock
                            Text="Создаёт аксонометрические схемы (3D-виды) 
                            на основе текущего окна"
                            Style="{StaticResource TBlock}"/>
                        <TextBlock
                            Text="ВАЖНО:"
                            FontWeight="Bold"
                            Style="{StaticResource TBlock}"
                            Foreground="Red"/>
                        <TextBlock Style="{StaticResource TBlock}">
                            Если используется шаблон вида - 
                            убедись, чтобы галка с задания фильтров 
                            с помощью шаблона была <Bold>снята!</Bold>
                        </TextBlock>
                    </StackPanel>
                </Button.ToolTip>
            </Button>

        </Grid>

        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Margin="0,5,0,5">
            <TextBox
                Text="{Binding ParameterName}"
                Style="{StaticResource TBox}"
                MinWidth="300"
                ToolTip="Это параметр, по которому будут объединяться системы для генерации видов и спецификаций"/>
            <Button
                x:Name="BtnParamSearch"
                Grid.Column="1"
                Content="🔍"
                ToolTip="Найти параметр в проекте (общий для всех категорий ОВВК)"
                Click="BtnParamSearch_Click"/>
        </StackPanel>
    </Grid>
</Window>
