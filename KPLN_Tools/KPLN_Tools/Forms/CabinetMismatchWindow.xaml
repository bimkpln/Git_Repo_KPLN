<Window x:Class="KPLN_Tools.Forms.CabinetMismatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KPLN. Результаты проверки"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner">

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBlock TextWrapping="Wrap" FontWeight="Bold">Найдены несоответствия между параметром "Имя панели" и параметром "КП_О_Группирование".
            </TextBlock>
        </StackPanel>

        <Grid Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- ШКАФЫ -->
            <GroupBox Header="Электрооборудование без соответствующего значения &quot;КП_О_Группирование&quot;"
              Grid.Row="0" Margin="0,0,0,5">
                <ListBox x:Name="ListBoxCabinets"
                 HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="ButtonsColumn" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                   Text="{Binding DisplayName}"
                                   TextWrapping="Wrap" />

                                <Button Grid.Column="1"
                                Content="Перейти"
                                Margin="8,0,0,0"
                                Padding="10,2"
                                HorizontalAlignment="Right"
                                Click="GoTo_Click" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>

            <!-- ЭЛЕМЕНТЫ УЗЛОВ -->
            <GroupBox Header="Элементы узлов без соответствующего параметра &quot;Имя панели&quot; у электрооборудования"
              Grid.Row="1">
                <ListBox x:Name="ListBoxNodes"
                 HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="ButtonsColumn" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                   Text="{Binding DisplayName}"
                                   TextWrapping="Wrap" />

                                <Button Grid.Column="1"
                                Content="Перейти"
                                Margin="8,0,0,0"
                                Padding="10,2"
                                HorizontalAlignment="Right"
                                Click="GoTo_Click" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </Grid>
        
    </DockPanel>
</Window>
