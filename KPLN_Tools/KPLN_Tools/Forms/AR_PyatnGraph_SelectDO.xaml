<Window x:Class="KPLN_Tools.Forms.AR_PyatnGraph_SelectDO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KPLN: Пятнография — выбор вариант для расчёта"
        SizeToContent="Height"
        MaxHeight="800"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#1E1E1E"
        Topmost="True">

    <Window.Resources>

        <!-- 🎨 Асноўныя колеры -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#2B2F3A"/>
        <SolidColorBrush x:Key="TextBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B0B0B0"/>

        <!-- Загалоўкі -->
        <Style x:Key="TBL_Title" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Тэкставыя палі -->
        <Style x:Key="TXTBX" TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#383C47"/>
            <Setter Property="BorderBrush" Value="#505562"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="ToolTipService.ShowDuration" Value="30000"/>
            <Setter Property="ToolTipService.InitialShowDelay" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="Orange"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="ToolTip"
                        Value="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Комбобокс -->
        <Style x:Key="CB" TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="25"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#383C47"/>
            <Setter Property="BorderBrush" Value="#505562"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ToolTipService.ShowDuration" Value="30000"/>
            <Setter Property="ToolTipService.InitialShowDelay" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid Width="{TemplateBinding ActualWidth}">
                            <!-- Асноўная рамка -->
                            <Border 
                                Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Змест (тэкст выбранага элемента) -->
                                    <ContentPresenter 
                                       Content="{Binding Path=SelectedItem.ARPG_DesignOptionName, RelativeSource={RelativeSource TemplatedParent}}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"/>

                                    <!-- Кнопка раскрыцця -->
                                    <ToggleButton 
                                        Name="ToggleButton"
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <Path 
                                            Data="M 0 0 L 4 4 L 8 0 Z"
                                            Fill="White"
                                            Stretch="Uniform"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- Выпадальны спіс -->
                            <Popup 
                                Name="PART_Popup"
                                Placement="Bottom"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                PopupAnimation="Slide">
                                <Border 
                                    Background="#2C2F38"
                                    BorderBrush="#505562"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="Orange"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Кнопка вместо текстового поля-->
        <Style x:Key="BTN_HeaderText" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- Пры навядзенні можна зрабіць лёгкае падсвятленне -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFD8D8D8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="#FFB0B0B0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Кнопкі: агульная база -->
        <Style TargetType="Button" x:Key="BTN_Base">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка Удалить -->
        <Style x:Key="BTN_Del" BasedOn="{StaticResource BTN_Base}" TargetType="Button">
            <Setter Property="Background" Value="#C84C4C"/>
            <Setter Property="ToolTip" Value="Удалить тип квартир"/>
        </Style>

        <!-- Основные кнопки -->
        <Style x:Key="BTN_Main" BasedOn="{StaticResource BTN_Base}" TargetType="Button">
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="MinWidth" Value="40"/>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <DockPanel>
            <TextBlock 
                Style="{StaticResource TBL_Title}" 
                MaxWidth="150"
                HorizontalAlignment="Left"
                Text="По какому варианту считаем?"/>
            <ComboBox
                Style="{StaticResource CB}"
                ItemsSource="{Binding DocARPGDesignOpts}"
                SelectedItem="{Binding SelARPGDesignOpt,
                    UpdateSourceTrigger=PropertyChanged, 
                    Mode=TwoWay}"
                DisplayMemberPath="ARPG_DesignOptionName">
            </ComboBox>

        </DockPanel>

        <!-- Кнопки -->
        <Button 
            Grid.Row="1"
            Style="{StaticResource BTN_Main}" 
            Content="▶"
            ToolTip="Выполнить рассчёт"
            Background ="Green"
            Click="Button_Click"
            IsEnabled="{Binding CanRun}"/>
    </Grid>
</Window>