<Window x:Class="KPLN_Tools.Forms.SettingsWindowNodeManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KPLN. Менеджер узлов. Настройки"
        Height="180"
        Width="360"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <StackPanel Margin="15">
        <Button x:Name="BtnUpdateDb" Margin="4" Padding="10" MinHeight="48" FontSize="14" Content="🔄  Обновить БД" Click="BtnUpdateDb_Click" HorizontalContentAlignment="Left"/>
        <Button x:Name="BtnAddDelCategory" Margin="4" Padding="10" MinHeight="48" FontSize="14" Content="🗂️  Добавить/удалить категорию" Click="BtnAddDelCategory_Click" HorizontalContentAlignment="Left"/>
    </StackPanel>
</Window>
