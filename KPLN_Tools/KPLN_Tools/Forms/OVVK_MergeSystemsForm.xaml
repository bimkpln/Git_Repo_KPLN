<Window x:Class="KPLN_Tools.Forms.OVVK_MergeSystemsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:KPLN_Tools.Forms"
        mc:Ignorable="d" 
        MinWidth="400"
        MinHeight="150"
        MaxHeight="750"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip"
        Topmost="True"
        Title="KPLN: ОВВК_Менеджер систем"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style x:Key="MainButtons" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>

        <Style x:Key="MainTBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CBox" TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <DockPanel
                LastChildFill="False"
                HorizontalAlignment="Center">
                <Button
                    Click="AddNewGroup_Click"
                    Content="Добавить группу"
                    Style="{StaticResource MainButtons}"/>
                <Button
                    Click="Run_Click"
                    Content="Выполнить"
                    Style="{StaticResource MainButtons}"/>
            </DockPanel>

            <GridSplitter 
                Height="3"
                HorizontalAlignment="Stretch"/>
        </StackPanel>
        
        <ScrollViewer 
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl 
                x:Name="SysIControll">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox 
                                    ItemsSource="{Binding SystemParameters}"
                                    SelectedValue="{Binding FirstParamName, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource CBox}"/>
                                <TextBlock
                                    Grid.Column="1"
                                    Text="+"
                                    Style="{StaticResource MainTBlock}"/>
                                <ComboBox 
                                    Grid.Column="2"
                                    ItemsSource="{Binding SystemParameters}"
                                    SelectedValue="{Binding LastParamName, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource CBox}"/>
                                <Button
                                    Grid.Column="3"
                                    Content="✖" 
                                    Foreground="Red"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Click="Del_Click"/>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
