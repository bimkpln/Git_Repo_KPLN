<Window x:Class="KPLN_Tools.Forms.FamilyManagerSettingDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер семейств. Панель администратора" Height="230" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" FontFamily="Century Gothic">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="999"
                BorderBrush="#B0B0B0" BorderThickness="1"
                CornerRadius="6" Padding="8" Margin="0,0,0,12">
            <StackPanel>
                <Button x:Name="btnDelete"
                        Content="Удалить из БД"
                        Margin="0,0,0,8" Height="22"
                        IsEnabled="False"
                        Click="Delete_Click" FontSize="11" Background="#FFF38C8C"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <CheckBox x:Name="cbInfo" Content="Информация" Margin="0,0,12,0"
                              Checked="OnSelectionChanged" Unchecked="OnSelectionChanged" FontSize="10"/>
                    <CheckBox x:Name="cbImage" Content="Изображение"
                              Checked="OnSelectionChanged" Unchecked="OnSelectionChanged" FontSize="10"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="90" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
