<UserControl x:Class="KPLN_Tools.Forms.RLinkUpdateContent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:KPLN_Tools.Forms"
        mc:Ignorable="d" 
        Background="#FF292D36">

    <UserControl.Resources>
        <Style x:Key="MainButtons" TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="5,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="MainTBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="TBox" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="CombBox" TargetType="ComboBox">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="Rect" TargetType="{x:Type Rectangle}">
            <Setter Property="Margin" Value="-5"/>
            <Setter Property="RadiusX" Value="3"/>
            <Setter Property="RadiusY" Value="3"/>
            <Setter Property="Stroke" Value="AliceBlue"/>
            <Setter Property="StrokeThickness" Value="2"/>
        </Style>

    </UserControl.Resources>



    <StackPanel Orientation="Vertical">
        <Button
            x:Name="ServerPathSelect"
            Content="Общий путь для поиска связей с сервера KPLN" 
            Click="ServerPathSelect_Click"
            BorderBrush="Green"
            Style="{StaticResource MainButtons}">
            <Button.ToolTip>
                <StackPanel>
                    <TextBlock
                        Text="Выбирай папки и помечай подходящие варианты"/>
                </StackPanel>
            </Button.ToolTip>
        </Button>
        <Button
            x:Name="RevitServerPathSelect"
            Content="Общий путь для поиска связей с Revit-Server" 
            Click="RevitServerPathSelect_Click"
            BorderBrush="Green"
            Style="{StaticResource MainButtons}">
            <Button.ToolTip>
                <StackPanel>
                    <TextBlock
                Text="Выбирай папки и помечай подходящие варианты"/>
                </StackPanel>
            </Button.ToolTip>
        </Button>

        <ItemsControl
            x:Name="LinkChangeColl"
            ItemsSource="{Binding LinkChangeEntityColl}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">

                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                                <ColumnDefinition Width="350"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.15*"/>
                                <RowDefinition Height="0.85*"/>
                            </Grid.RowDefinitions>

                            <Rectangle
                                x:Name="DataRectangle"
                                Grid.ColumnSpan="5"
                                Grid.RowSpan="2"
                                Fill="{Binding FillColor}"
                                Style="{StaticResource Rect}"/>

                            <Button
                                x:Name="RemoveItemBtn" 
                                Grid.Row="1"
                                Content="✖️" 
                                Click="RemoveItem"
                                VerticalAlignment ="Stretch"
                                HorizontalAlignment ="Stretch"
                                Background="Transparent"
                                Foreground="Black"
                                BorderBrush="Transparent"
                                ToolTip="Нажми, чтобы удалить данную конфигурацию"
                                Style="{StaticResource MainButtons}"/>
                            <Button
                                x:Name="MarkAsFinalBtn" 
                                Grid.Row="1"
                                Grid.Column="1"
                                Content="✔️" 
                                Click="MarkAsFinal"
                                VerticalAlignment ="Stretch"
                                HorizontalAlignment ="Stretch"
                                Background="Transparent"
                                Foreground="Black"
                                BorderBrush="Transparent"
                                Style="{StaticResource MainButtons}">
                                <Button.ToolTip>
                                    <TextBlock
                                        Text="Нажми, чтобы пометить/снять пометку конечного результата (чтобы при глобальном поиске модели игнорировались)"
                                        TextWrapping="Wrap"/>
                                </Button.ToolTip>
                            </Button>

                            <TextBlock
                                Grid.Column="2"
                                Text="Исходная связь:"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MainTBlock}"/>
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="2"
                                Orientation="Vertical">
                                <TextBlock 
                                    TextWrapping="Wrap"
                                    Style="{StaticResource TBlock}"
                                    Text="{Binding LinkName}"/>
                                <TextBlock 
                                    TextWrapping="Wrap"
                                    Style="{StaticResource TBlock}"
                                    FontSize="10"
                                    Text="{Binding LinkPath}"/>
                            </StackPanel>

                            <TextBlock
                                Grid.Column="3"
                                Text="Связь на замену:"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MainTBlock}"/>
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="3"
                                Orientation="Vertical">
                                <TextBlock 
                                    TextWrapping="Wrap"
                                    Style="{StaticResource TBlock}"
                                    Text="{Binding UpdatedLinkName}"/>
                                <TextBlock 
                                    TextWrapping="Wrap"
                                    Style="{StaticResource TBlock}"
                                    FontSize="10"
                                    Text="{Binding UpdatedLinkPath}"/>
                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="4"
                                Orientation="Horizontal">
                                <Button 
                                    x:Name="UpdateServLink" 
                                    Content="📁" 
                                    Click="UpdateServLink_Click"
                                    BorderBrush="Transparent"
                                    Background="Transparent"
                                    Style="{StaticResource MainButtons}">
                                    <Button.ToolTip>
                                        <TextBlock
                                            Text="Обновить связь с сервера KPLN (читай из папки)"/>
                                    </Button.ToolTip>
                                </Button>
                                <Button 
                                    x:Name="UpdateRevitServerLink" 
                                    Content="🗃" 
                                    Click="UpdateRevitServerLink_Click"
                                    BorderBrush="Transparent"
                                    Background="Transparent"
                                    Style="{StaticResource MainButtons}">
                                    <Button.ToolTip>
                                        <StackPanel>
                                            <TextBlock
                                                Text="Обновить связь с Revit-Server"/>
                                        </StackPanel>
                                    </Button.ToolTip>
                                </Button>

                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>

</UserControl>