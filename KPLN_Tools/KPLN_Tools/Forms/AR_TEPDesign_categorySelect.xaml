<Window x:Class="KPLN_Tools.Forms.AR_TEPDesign_categorySelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор категории"
        Height="210" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Topmost="True"
        ShowInTaskbar="False">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Помещения" Tag="1" Width="240" Height="30"
            Padding="10,0,0,0"  Margin="0 0 0 5" HorizontalContentAlignment="Left" Click="CategoryButton_Click"/>
            <Button Content="Цветовые области (элементы узлов)" IsEnabled="False" Tag="2" Width="240" Height="30"
            Padding="10,0,0,0" Margin="0 0 0 5" HorizontalContentAlignment="Left" Click="CategoryButton_Click"/>
            <Button Content="Зоны" IsEnabled="False" Tag="3" Width="240" Height="30"
            Padding="10,0,0,0" Margin="0 0 0 5" HorizontalContentAlignment="Left" Click="CategoryButton_Click"/>
            <Button Content="Формы (перекрытия)" IsEnabled="False" Tag="4" Width="240" Height="30"
            Padding="10,0,0,0" HorizontalContentAlignment="Left" Click="CategoryButton_Click"/>
        </StackPanel>
    </Grid>
</Window>