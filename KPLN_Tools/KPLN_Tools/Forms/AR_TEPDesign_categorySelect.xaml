<Window x:Class="KPLN_Tools.Forms.AR_TEPDesign_categorySelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор категории"
        Height="255" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Topmost="True"
        ShowInTaskbar="False">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Помещения" Tag="1" Width="240" Height="30"
            Padding="10,0,0,0"  Margin="0 0 0 5" HorizontalContentAlignment="Left" Click="CategoryButton_Click"/>
            <Button Content="Зоны" Tag="3" Width="240" Height="30"
            Padding="10,0,0,0" Margin="0 0 0 5" HorizontalContentAlignment="Left" Click="CategoryButton_Click"/>
            <Button Content="Цветовые области (элементы узлов)" Tag="2" Width="240" Height="30"
            Padding="10,0,0,0" Margin="0 0 0 5" HorizontalContentAlignment="Left" Click="CategoryButton_Click"/>
            <Button Content="Формы (перекрытия)" Tag="4" Width="240" Height="30"
            Padding="10,0,0,0" HorizontalContentAlignment="Left" Click="CategoryButton_Click"/>

            <Button Content="⚠️ Принудительное обновление стиля таблицы" Tag="4" Width="240" Height="30" Margin="0 20 0 0"
                Padding="10,0,0,0" HorizontalContentAlignment="Left" Click="UpdateTablleButton_Click" FontSize="9" Background="#FFFFF7DA"/>
        </StackPanel>
    </Grid>
</Window>