<Window x:Class="KPLN_Tools.Forms.ChangeCategoryWindowNodeManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор категории"
        Height="215"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Категория -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Основная категория:" Margin="0,0,0,4"/>
            <ComboBox x:Name="CbCategory" DisplayMemberPath="Name" SelectionChanged="CbCategory_SelectionChanged"/>
        </StackPanel>

        <!-- Подкатегория -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Вложенная подкатегория/подкатегории:" Margin="0,0,0,4"/>
            <ComboBox x:Name="CbSubcategory" DisplayMemberPath="Title"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Отмена" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
