<UserControl x:Class="KPLN_FamilyManager.Forms.FamilyManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="240" MinHeight="120" FontFamily="Century Gothic"
             Loaded="UserControl_Loaded">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="12,10,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Текущий отдел:  " FontWeight="Bold" VerticalAlignment="Center"/>
                <ComboBox x:Name="CmbDepartment"
              Width="120"
              IsEditable="False"
              IsTextSearchEnabled="True"
              VerticalAlignment="Center"
              SelectionChanged="CmbDepartment_SelectionChanged"/>
            </StackPanel>


            <Button x:Name="BtnReload" Grid.Column="1" Width="22" Height="22" Margin="0 0 5 0" HorizontalAlignment="Left" VerticalAlignment="Center" ToolTip="Загрузить данные" Click="BtnReload_Click">
                <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>

            <Button x:Name="BtnSettings" Grid.Column="2" Width="22" Height="22" HorizontalAlignment="Left" VerticalAlignment="Center" ToolTip="Настройки" Click="BtnSettings_Click">
                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </Grid>
        <Border x:Name="MainArea"
                Grid.Row="1"
                Margin="6"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="6"
                Background="{x:Null}">
        </Border>
    </Grid>
</UserControl>