<Window x:Class="KPLN_ModelChecker_User.Forms.CheckMonolithSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверка монолита. Преднастройка"
        Topmost="True"
        Width="400"
        Height="169"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10 5 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Выберите категории для обработки:"
                   Margin="0,0,8,4"
                   FontSize="11" Grid.ColumnSpan="2"/>
        <ListBox x:Name="lstCategories"
                 Grid.Row="1" Grid.Column="0"
                 SelectionMode="Extended"
                 FontSize="11" Width="190" HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="0" Grid.Column="2"
                   Text="Допустимая погрешность:"
                   Margin="0,0,0,4"
                   FontSize="11"/>
        <TextBox x:Name="txtTolerance"
                 Grid.Row="1" Grid.Column="2"
                 Text="0.1"
                 TextAlignment="Right"
                 MaxLength="5"
                 Width="135"
                 Padding="0 0 3 0"
                 FontSize="11"
                 VerticalContentAlignment="Center"
                 Height="22"
                 ToolTip="Введите число" VerticalAlignment="Top"/>


        <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Button Content="🔎 Проверка ClashPoint"
                    x:Name="btnClashInfo"
                    Grid.Column="0"
                    Width="150"
                    Height="25"
                    Padding="0 0 5 1"
                    HorizontalAlignment="Left" Click="ButtonClashInfo_Click" Background="#FFC6F9C2"/>
            <Button Content="Перейти к выбору элементов"
                    Grid.Column="1"
                    Width="180"
                    Height="25"
                    HorizontalAlignment="Right"
                    Click="ButtonNext_Click"/>
        </Grid>
    </Grid>
</Window>
