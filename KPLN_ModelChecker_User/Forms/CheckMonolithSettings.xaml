<Window x:Class="KPLN_ModelChecker_User.Forms.CheckMonolithSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверка монолита. Преднастройка"
        Topmost="True"
        Width="400"
        Height="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Выберите основную модель:"
                   Margin="0,0,0,4"
                   FontSize="11"/>
        <ComboBox x:Name="cmbMainModel"
                  Grid.Row="1"
                  Margin="0,0,0,8"
                  HorizontalAlignment="Stretch"
                  SelectionChanged="cmbMainModel_SelectionChanged" FontSize="11"/>

        <TextBlock Grid.Row="2"
                   Text="Выберите связные модели:"
                   Margin="0,0,0,4"
                   FontSize="11"/>
        <ListBox x:Name="lstLinkedModels"
                 Grid.Row="3"
                 SelectionMode="Extended" FontSize="11"/>


        <TextBlock Grid.Row="4"
                   Text="Выберите категории для обработки:"
                   Margin="0,8,0,4"
                   FontSize="11"/>

        <ListBox x:Name="lstCategories"
                 Grid.Row="5"
                 SelectionMode="Extended" FontSize="11"/>

        <TextBlock Grid.Row="6"
                   Text="Допустимая погрешность:"
                   Margin="0,8,0,4"
                   FontSize="11"/>
        <TextBox x:Name="txtTolerance"
                 Text="0.1"
                 TextAlignment="Right"
                 Grid.Row="7"
                 MaxLength="5"
                 Width="135"
                 Padding="0 0 3 0"
                 HorizontalAlignment="Left"
                 FontSize="11"
                 VerticalContentAlignment="Center"
                 Height="22"
                 ToolTip="Введите число"/>

        <Button Grid.Row="7"
                Content="Перейти к выбору элементов"
                Width="180"
                Height="25"
                HorizontalAlignment="Right"
                Margin="0,0,0,0" Click="Button_Click"/>
    </Grid>
</Window>