<Window x:Class="KPLN_Clashes_Ribbon.Forms.ReportGroupPickerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор группы для переноса статусов" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#FF292D36"
        FontFamily="Monaco, Consolas, 'Andale Mono', 'DejaVu Sans Mono', monospace"
        WindowStyle="ToolWindow">
    <StackPanel Margin="16">
        <TextBlock Text="Выберите группу отчётов, из которой будем копировать статусы:" 
                   Foreground="White" FontWeight="Bold" Margin="0,0,0,8"/>
        <ItemsControl ItemsSource="{Binding Buttons}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Title}" Margin="0,0,0,8" Padding="8,4" IsEnabled="{Binding IsEnabled}" Click="OnPick" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="Отмена" Padding="8,4" Margin="0 20 0 0" Click="OnCancel" HorizontalAlignment="Right" />
    </StackPanel>
</Window>
