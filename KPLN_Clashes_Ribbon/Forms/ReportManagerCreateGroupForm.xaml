<Window x:Class="KPLN_Clashes_Ribbon.Forms.ReportManagerCreateGroupForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:KPLN_Clashes_Ribbon.Forms"
        mc:Ignorable="d" 
        FontFamily="Monaco, Consolas, 'Andale Mono', 'DejaVu Sans Mono', monospace" 
        Title="KPLN: Отчеты Navisworks" 
        WindowStyle="ToolWindow" 
        Topmost="False"
        WindowStartupLocation="CenterScreen" 
        Width="350"
        SizeToContent="Height"
        Background="#FF292D36"
        Loaded="OnLoaded">
    <Window.Resources>
        <Style x:Key="TXTBX" TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MaxWidth" Value="400"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock 
            x:Name="ReportNameTBl"
            Text="Имя отчета:" 
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="HeaderTBox"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>

        <TextBlock 
            Text="ID задачи АР:" 
            Grid.Row="1"
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="ARBitrixTaskIdTBox"
            Grid.Row="1"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding BitrixTaskIdAR, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>
        
        <TextBlock 
            Text="ID задачи КР:" 
            Grid.Row="2"
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="KRBitrixTaskIdTBox"
            Grid.Row="2"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding BitrixTaskIdKR, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>

        <TextBlock 
            Text="ID задачи ОВ:" 
            Grid.Row="3"
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="OVBitrixTaskIdTBox"
            Grid.Row="3"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding BitrixTaskIdOV, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>
        
        <TextBlock 
            Text="ID задачи ИТП:" 
            Grid.Row="4"
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="ITPBitrixTaskIdTBox"
            Grid.Row="4"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding BitrixTaskIdITP, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>
        
        <TextBlock 
            Text="ID задачи ВК:" 
            Grid.Row="5"
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="VKBitrixTaskIdTBox"
            Grid.Row="5"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding BitrixTaskIdVK, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>

        <TextBlock 
            Text="ID задачи АУПТ:" 
            Grid.Row="6"
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="AUPTBitrixTaskIdTBox"
            Grid.Row="6"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding BitrixTaskIdAUPT, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>
        
        <TextBlock 
            Text="ID задачи ЭОМ:" 
            Grid.Row="7"
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="EOMBitrixTaskIdTBox"
            Grid.Row="7"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding BitrixTaskIdEOM, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>

        <TextBlock 
            Text="ID задачи СС:" 
            Grid.Row="8"
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="SSBitrixTaskIdTBox"
            Grid.Row="8"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding BitrixTaskIdSS, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>

        <TextBlock 
            Text="ID задачи АВ:" 
            Grid.Row="9"
            VerticalAlignment="Center" 
            IsEnabled="False"
            FontWeight="Bold" 
            Foreground="White"
            Margin="5,0,5,0"/>
        <TextBox 
            x:Name="AVBitrixTaskIdTBox"
            Grid.Row="9"
            Grid.Column="1"
            xml:lang="ru-RU"
            SpellCheck.IsEnabled="True"
            Style="{StaticResource TXTBX}" 
            Text="{Binding BitrixTaskIdAV, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Left" 
            VerticalAlignment="Center" 
            FontStretch="ExtraExpanded"/>

        <Button
            x:Name="LoadByParentBtn" 
            Grid.ColumnSpan="2"
            Grid.Row="10"
            Margin="5,5,5,5" 
            Content="Подобрать задачи по базовой" 
            Background="#19FFFFFF" 
            BorderBrush="White" 
            Foreground="White"
            Click="LoadByParentBtn_Click">
            <Button.ToolTip>
                <StackPanel>
                    <TextBlock>Нажми, чтобы подобрать задачи по имени отеда из базавой задачи.</TextBlock>
                    <TextBlock><Bold>ВАЖНО:</Bold> Поиск осуществляется по имени задачи. Имя должно содержать:</TextBlock>
                    <TextBlock>1. Задача для АР: "для АР."</TextBlock>
                    <TextBlock>2. Задача для КР: "для КР."</TextBlock>
                    <TextBlock>3. Задача для ОВ: "для ОВ."</TextBlock>
                    <TextBlock>4. Задача для ИТП: "для ИТП."</TextBlock>
                    <TextBlock>5. Задача для ВК: "для ВК."</TextBlock>
                    <TextBlock>6. Задача для АУПТ: "для АУПТ."</TextBlock>
                    <TextBlock>7. Задача для ЭОМ: "для ЭОМ."</TextBlock>
                    <TextBlock>8. Задача для СС: "для СС."</TextBlock>
                    <TextBlock>9. Задача для АВ: "для СС_АВ."</TextBlock>
                </StackPanel>
            </Button.ToolTip>
        </Button>
        <Button
            x:Name="RunBtn" 
            Grid.ColumnSpan="2"
            Grid.Row="11"
            Margin="5,5,5,5" 
            Content="Создать" 
            Background="#19FFFFFF" 
            BorderBrush="White" 
            Foreground="White"
            Click="RunBtn_Click"/>
    </Grid>

</Window>
